<Window x:Class="Course.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="148">
            <Label Content="Логин:"/>
            <TextBox Name="UsernameTextBox" Width="200" TextChanged="UsernameTextBox_TextChanged"/>
            <Label Content="Пароль:"/>
            <PasswordBox Name="PasswordBox" Width="200"/>
            <Button Content="Войти" Click="LoginButton_Click" Width="100"/>
            <Button Content="Регистрация" Click="Button_registration_Click"/>
        </StackPanel>
       
    </Grid>
</Window>
